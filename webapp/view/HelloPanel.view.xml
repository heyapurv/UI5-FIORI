<mvc:View 
  controllerName="ui5.walkthrough.controller.HelloPanel"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">
  
    <Panel  headerText="{i18n>helloPanelTitle}">
       <content>
           <Button class="myCustomButton"  text="{i18n>showHelloButtonText}" press=".onShowHello"></Button>
           <Input class="sapUiSmallMarginBegin" value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"></Input>
       </content>
    </Panel>


</mvc:View>