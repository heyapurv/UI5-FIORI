<mvc:View 
  controllerName="ui5.walkthrough.controller.HelloPanel"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">
  
    <Panel  headerText="{i18n>helloPanelTitle}">
       <content>
           <Button class="sapUiSmallMarginEnd" id="helloDialogButton" text="{i18n>openDialogButtonText}" press=".onOpenDialog"></Button>
           <Button class="myCustomButton"  text="{i18n>showHelloButtonText}" press=".onShowHello"></Button>
           <Input class="sapUiSmallMarginBegin" value="{/recipient/name}" description="Hello" valueLiveUpdate="true" width="60%"></Input>
           <FormattedText htmlText="Hello " class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
       </content>
    </Panel>


</mvc:View>